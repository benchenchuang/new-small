@import "pages/dist/common/index.wxss";
/**app.wxss**/
.flex_box{
  display: flex;
  display: -webkit-flex;
}
.flex_item{
  flex: 1;
  -webkit-flex:1;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.no-data {
    padding: 100rpx 30rpx;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
}

.icon-nothing {
    background: url(https://coding.it919.cn/static/images/no-data.png) center no-repeat;
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
}

.scenes_container {
  padding: 10px;
  border-top: 1px solid #e7e8e9;
  display: flex;
  box-sizing: border-box;
}
.whole_left{
  padding: 10px;
  border-top: 1px solid #e7e8e9;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  font-size:15px;
}
.scenes_left {
  display: flex;
  flex-direction: column;
  font-size: 15px;
  width: 520rpx;
}
.scenes_title{
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 25px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  column-count: 1;
}
.scenes_intro {
  font-size: 15px;
  margin: 5px 0px;
  color: #919293;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 25px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  column-count: 2;
}

.scenes_right {
  position: relative;
  width: 210rpx;
  height:210rpx;
  background-repeat:no-repeat; 
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}
.play_info{
  background: black;
  border-radius: 10px;
  width:90rpx;
  height:10px;
  position: absolute;
  bottom: 15px;
  right:30rpx;
  opacity: 0.7;
}
.play_text{
  width: 50rpx;
  float:left;
  line-height: 10px;
  position: relative;
  top:-7px;
  left:15px;
color: white;
z-index: 100;
font-size:8px;
}
.play-image{
  position: relative;
  top:5rpx;
  left:5rpx;
}
.scenes_img {
  width: 200rpx;
  height: 200rpx;
}

.scenes_creater {
  margin-top: 5px;
  font-size: 13px;
  color: #919293;
  display: flex;
  align-items: baseline;
}

.article_container {
  height: 100%;
  display: flex;
  padding: 20rpx;
  width: 730rpx;
  /* background: red; */
  /* border:1px solid blue; */
  box-sizing: border-box;
} 

.article_img{
  width:700rpx;
}
.article_title{
  margin-bottom:27px;
    font-size:19px;
}
.article_field{
  font-size:17px;
}
.article_content{
  font-size:16px;
  color:#919293;
   margin-top:17px;
  margin-bottom: 27px;
}
.article_content text{
  line-height: 15px;
}

.tags{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content:center;
}
.tag{
  margin-left:5px;
}

.like-icon{
 margin-right:5px;
 position:relative;
 top:2px;
}
.praise{
  display: flex;
  /* align-items: center; */
  margin-top:10px;
  margin-bottom:20px;
  justify-content: center;
  color:  #979899
}
.like-view{
  border: 1px solid #C5C6C6;
  border-radius:20px;
  width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}
.background-img{
    background-repeat:no-repeat; 
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}
.cover-size{
  width:180rpx;
  height:180rpx;
}