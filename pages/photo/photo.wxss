/* pages/photo/photo.wxss */
.photo_top{
  padding: 0 30rpx;
  background: linear-gradient(#2f85e8 0%, #fff 70%);
}
.photo_user{
  padding: 20rpx;
  background: rgba(255,255,255,.6);
  border-radius: 20rpx;
  box-shadow: 0 2rpx 4rpx 4rpx rgba(0,0,0,.05);
}
.user_info .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  vertical-align: middle;
}
.user_info .name{
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #333;
}
.select_tab{
  margin-top: 20rpx;
  padding:0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #999;
  box-shadow: 0 2rpx 4rpx 4rpx rgba(0,0,0,.05);
}
.select_tab .icon-select{
  width: 33rpx;
  margin-right: 10rpx;
}
.user_control{
  text-align: right;
}
.user_control .label{
  display: inline-block;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666;
  padding:10rpx 20rpx;
  border: 1px solid #e4e4e4;
  background: #fff;
}
.user_control .label image{
  width: 33rpx;
  text-align: center;
}
.photos{
  overflow: hidden;
  padding: 20rpx 20rpx;
}
.photo_item{
  position: relative;
  float: left;
  width: 46%;
  margin: 10rpx 2%;
}
.photo_item image{
  width: 100%;
  height: 380rpx;
  vertical-align: middle;
}
.photo_item .desc{
  position: absolute;
  left: 0;
  right:0;
  bottom: 0;
  padding: 20rpx;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0,0,0,.4);
}

