/* pages/person/person.wxss */
page{
  background: linear-gradient(#415d8d 0%, #765c4f);
}
.person_info{
  text-align: center;
}
.person_avatar .avatar{
  margin: 40rpx auto 20rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 100%;
  border:8rpx solid #a1a5b1;
}
.user_info{
  font-size: 26rpx;
  color: #fff;
}
.user_info .job{
  padding:10rpx 0 30rpx;
}
.user_info .name,
.user_info .company{
  font-size: 32rpx;
}
.info_box{
  margin: 40rpx;
  padding: 20rpx;
  background: rgba(0,0,0,.2);
}
.info_box .flex_box{
  line-height: 40rpx;
  padding: 30rpx 0 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #62534c;
}
.info_box .name{
  width: 80rpx;
  font-size: 26rpx;
  color: #999;
}
.info_box .icon{
  width: 38rpx;
}
.info_box .val{
  font-size: 30rpx;
  color: #ccc;
}
.btn_box{
  padding: 20rpx 80rpx;
  display: flex;
  display: -webkit-flex;
}
.btn_box button.control_btn{
  margin: 0 20rpx;
  flex:1;
  -webkit-flex: 1;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #46bd63;
  border-radius: 100rpx;
  background: none;
  border:1px solid #46bd63;
}
